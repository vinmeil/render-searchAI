<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #111;
            color: #fff;
        }

        h1, h2 {
            text-align: center;
            color: #fff;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            margin: 20px;
        }

        .product-card {
            background-color: #222;
            border: 1px solid #333;
            border-radius: 10px;
            padding: 10px;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
        }

        .product-card img {
            width: 100%;
            height: 180px;
            object-fit: contain;
            background-color: #000;
        }

        .product-card h2 {
            font-size: 1em;
            margin: 10px 0;
            color: #fff;
        }

        .product-card p {
            color: #aaa;
            margin: 5px 0;
        }

        .product-card a button {
            margin-top: 10px;
            padding: 8px 15px;
            font-size: 0.9em;
            background-color: #ff6f61;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .back-button {
            margin: 20px;
        }

        .back-button a {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border-radius: 5px;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="back-button">
        <a href="/">Back to Index</a>
    </div>
    <h1>Search Results</h1>

    <!-- Skye Results -->
    <% if (products.Skye && products.Skye.length > 0) { %>
        <h2>Skye</h2>
        <div class="products-grid">
            <% products.Skye.forEach(product => { %>
                <div class="product-card">
                    <img src="<%= product.img_link %>" alt="Product Image">
                    <h2><%= product.name %></h2>
                    <p><strong>Price: </strong><%= product.price || "N/A" %></p>
                    <a href="<%= product.product_link %>" target="_blank">
                        <button>View Product</button>
                    </a>
                </div>
            <% }) %>
        </div>
    <% } %>

    <!-- Malboro Results -->
    <% if (products.Malboro && products.Malboro.length > 0) { %>
        <h2>Malboro</h2>
        <div class="products-grid">
            <% products.Malboro.forEach(product => { %>
                <div class="product-card">
                    <img src="<%= product.img_link %>" alt="Product Image">
                    <h2><%= product.name %></h2>
                    <p><strong>Price: </strong><%= product.price || "N/A" %></p>
                    <a href="<%= product.product_link %>" target="_blank">
                        <button>View Product</button>
                    </a>
                </div>
            <% }) %>
        </div>
    <% } %>
</body>
</html>
